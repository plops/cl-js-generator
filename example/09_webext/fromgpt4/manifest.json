{
  "manifest_version": 2,
  "name": "File Downloader",
  "version": "1.0",
  "description": "Downloads images and videos from a specified URL.",
  "permissions": ["http://*/*", "https://*/*", "downloads"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "File Downloader"
  }
}
